{
  "uid": "review-ops",
  "title": "Review Operations",
  "tags": ["phase6", "reviews"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "style": "dark",
  "editable": true,
  "panels": [
    {
      "type": "stat",
      "title": "Open Review Tickets",
      "id": 1,
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "neuraforge_review_tickets{status=\"open\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": ["last"],
          "fields": "",
          "values": false
        },
        "orientation": "auto"
      }
    },
    {
      "type": "stat",
      "title": "Tickets In Review",
      "id": 2,
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "neuraforge_review_tickets{status=\"in_review\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": ["last"],
          "fields": "",
          "values": false
        },
        "orientation": "auto"
      }
    },
    {
      "type": "stat",
      "title": "Resolved This Hour",
      "id": 3,
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "increase(neuraforge_review_tickets{status=\"resolved\"}[1h])",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": ["last"],
          "fields": "",
          "values": false
        },
        "orientation": "auto"
      }
    },
    {
      "type": "timeseries",
      "title": "Ticket Mix",
      "id": 4,
      "gridPos": { "x": 0, "y": 6, "w": 24, "h": 9 },
      "targets": [
        {
          "expr": "neuraforge_review_tickets",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Open Ticket Trend",
      "id": 5,
      "gridPos": { "x": 0, "y": 15, "w": 24, "h": 9 },
      "targets": [
        {
          "expr": "avg_over_time(neuraforge_review_tickets{status=\"open\"}[4h])",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      }
    }
  ],
  "time": {
    "from": "now-24h",
    "to": "now"
  }
}
