# Staging environment configuration
ENVIRONMENT=staging
API_V1_PREFIX=/api/v1

REDIS__URL=redis://staging-redis:6379/0
REDIS__TASK_QUEUE_DB=1

POSTGRES__DSN=postgresql+asyncpg://staging-app:***@staging-postgres:5432/neuraforge
POSTGRES__POOL_MIN_SIZE=1
POSTGRES__POOL_MAX_SIZE=10

QDRANT__URL=https://staging-qdrant.neuraforge.ai
QDRANT__API_KEY=@Microsoft.KeyVault(SecretUri=https://vault-staging.vault.azure.net/secrets/qdrant-api-key/)
QDRANT__COLLECTION_NAME=neura_tasks

OLLAMA__HOST=https://staging-ollama.neuraforge.ai
OLLAMA__PORT=443
OLLAMA__MODEL=llama3.1:8b

AUTH__JWT_SECRET_KEY=@Microsoft.KeyVault(SecretUri=https://vault-staging.vault.azure.net/secrets/backend-jwt-secret/)
AUTH__JWT_ALGORITHM=HS256
AUTH__ACCESS_TOKEN_EXPIRE_MINUTES=60

OBSERVABILITY__PROMETHEUS_ENABLED=true
OBSERVABILITY__GRAFANA_ENABLED=true
OBSERVABILITY__LOG_LEVEL=INFO

BACKEND_BASE_URL=https://staging-api.neuraforge.ai

TOOLS__MCP__ENABLED=true
TOOLS__MCP__ENDPOINT=https://mcp-staging.neuraforge.ai
TOOLS__MCP__API_KEY=@Microsoft.KeyVault(SecretUri=https://vault-staging.vault.azure.net/secrets/mcp-api-key/)
TOOLS__MCP__API_KEY_HEADER=Authorization
TOOLS__MCP__AUTH_SCHEME=Bearer
TOOLS__MCP__CLIENT_ID=neuraforge-staging
TOOLS__MCP__CLIENT_SECRET=@Microsoft.KeyVault(SecretUri=https://vault-staging.vault.azure.net/secrets/mcp-client-secret/)
TOOLS__MCP__SIGNING_SECRET=aws-secrets://neuraforge/staging/mcp-signing
TOOLS__MCP__SIGNING_HEADER=X-MCP-Signature
TOOLS__MCP__SIGNING_ALGORITHM=hmac-sha256
TOOLS__MCP__CATALOG_PATH=/tools
TOOLS__MCP__HEALTHCHECK_PATH=/health
TOOLS__MCP__INVOKE_PATH_TEMPLATE=/tools/{tool}/invoke
TOOLS__MCP__ALIASES__RESEARCH.SEARCH=search/tavily
TOOLS__MCP__ALIASES__RESEARCH.ARXIV=research/arxiv
TOOLS__MCP__ALIASES__FINANCE.SNAPSHOT=finance/yfinance
