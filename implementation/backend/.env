# === Environment Settings ===
ENVIRONMENT=local
API_V1_PREFIX=/api/v1

# === Redis ===
REDIS__URL=redis://redis:6379/0
REDIS__TASK_QUEUE_DB=1

# === PostgreSQL ===
POSTGRES__DSN=postgresql://postgres:postgres@postgres:5432/neuraforge
POSTGRES__POOL_MIN_SIZE=1
POSTGRES__POOL_MAX_SIZE=10

# === Qdrant ===
QDRANT__URL=http://qdrant:6333
QDRANT__API_KEY=
QDRANT__COLLECTION_NAME=neura_tasks

# === Ollama (Local Host) ===
OLLAMA__HOST=http://host.docker.internal:11434
OLLAMA__URL=http://host.docker.internal:11434
OLLAMA__PORT=11434
OLLAMA__MODEL=llama3.1:8b
OLLAMA__NUM_CTX=8192

# === Auth ===
AUTH__JWT_SECRET_KEY=change_me_to_a_secure_value_of_at_least_32_chars
AUTH__JWT_ALGORITHM=HS256
AUTH__ACCESS_TOKEN_EXPIRE_MINUTES=60

# === Observability ===
OBSERVABILITY__PROMETHEUS_ENABLED=true
OBSERVABILITY__GRAFANA_ENABLED=true
OBSERVABILITY__LOG_LEVEL=INFO

# === Finance Providers ===
ALPHAVANTAGE_API_KEY=D65SHTSC31PY9FNZ
# Comma-separated list, first entry is primary, second entry (if provided) is the automatic fallback alias.
FINANCE_SNAPSHOT_PROVIDER=alpha_vantage

# === Backend URL ===
BACKEND_BASE_URL=http://localhost:8000
FRONTEND_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173","http://localhost:8080","http://127.0.0.1:8080","http://localhost:8081","http://127.0.0.1:8081"]

# === MCP (Tool Integration placeholders) ===
TOOLS__MCP__ENABLED=true
TOOLS__MCP__USE_LOCAL_ROUTER=true
TOOLS__MCP__ENDPOINT=http://localhost:8000
TOOLS__MCP__API_KEY=
TOOLS__MCP__API_KEY_HEADER=Authorization
TOOLS__MCP__AUTH_SCHEME=Bearer
TOOLS__MCP__CLIENT_ID=
TOOLS__MCP__CLIENT_SECRET=
TOOLS__MCP__SIGNING_SECRET=
TOOLS__MCP__SIGNING_HEADER=X-MCP-Signature
TOOLS__MCP__SIGNING_ALGORITHM=hmac-sha256
TOOLS__MCP__CATALOG_PATH=/mcp/tools
TOOLS__MCP__HEALTHCHECK_PATH=/mcp/health
TOOLS__MCP__INVOKE_PATH_TEMPLATE=/mcp/tools/{tool}/invoke
TOOLS__MCP__ALIASES__FINANCE.SNAPSHOT=finance/alpha_vantage

# === Planner LLM ===
# Using Phi-3 3.8B for better instruction following and JSON output
PLANNER_LLM__MODEL=llama3.1:8b
PLANNER_LLM__TEMPERATURE=0.0
PLANNER_LLM__MAX_OUTPUT_TOKENS=2048
