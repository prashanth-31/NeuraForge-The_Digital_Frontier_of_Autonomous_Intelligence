# Production environment configuration
ENVIRONMENT=production
API_V1_PREFIX=/api/v1

REDIS__URL=redis://prod-redis:6379/0
REDIS__TASK_QUEUE_DB=1

POSTGRES__DSN=postgresql://prod-app:***@prod-postgres:5432/neuraforge
POSTGRES__POOL_MIN_SIZE=2
POSTGRES__POOL_MAX_SIZE=20

QDRANT__URL=https://qdrant.neuraforge.ai
QDRANT__API_KEY=@Microsoft.KeyVault(SecretUri=https://vault.vault.azure.net/secrets/qdrant-api-key/)
QDRANT__COLLECTION_NAME=neura_tasks

OLLAMA__HOST=https://ollama.neuraforge.ai
OLLAMA__PORT=443
OLLAMA__MODEL=llama3.1:70b

AUTH__JWT_SECRET_KEY=@Microsoft.KeyVault(SecretUri=https://vault.vault.azure.net/secrets/backend-jwt-secret/)
AUTH__JWT_ALGORITHM=HS512
AUTH__ACCESS_TOKEN_EXPIRE_MINUTES=60

OBSERVABILITY__PROMETHEUS_ENABLED=true
OBSERVABILITY__GRAFANA_ENABLED=true
OBSERVABILITY__LOG_LEVEL=INFO

BACKEND_BASE_URL=https://api.neuraforge.ai

TOOLS__MCP__ENABLED=true
TOOLS__MCP__ENDPOINT=https://mcp.neuraforge.ai
TOOLS__MCP__API_KEY=@Microsoft.KeyVault(SecretUri=https://vault.vault.azure.net/secrets/mcp-api-key/)
TOOLS__MCP__API_KEY_HEADER=Authorization
TOOLS__MCP__AUTH_SCHEME=Bearer
TOOLS__MCP__CLIENT_ID=neuraforge-prod
TOOLS__MCP__CLIENT_SECRET=@Microsoft.KeyVault(SecretUri=https://vault.vault.azure.net/secrets/mcp-client-secret/)
TOOLS__MCP__SIGNING_SECRET=aws-secrets://neuraforge/prod/mcp-signing
TOOLS__MCP__SIGNING_HEADER=X-MCP-Signature
TOOLS__MCP__SIGNING_ALGORITHM=hmac-sha256
TOOLS__MCP__CATALOG_PATH=/tools
TOOLS__MCP__HEALTHCHECK_PATH=/health
TOOLS__MCP__INVOKE_PATH_TEMPLATE=/tools/{tool}/invoke
TOOLS__MCP__ALIASES__RESEARCH.SEARCH=search/tavily
TOOLS__MCP__ALIASES__RESEARCH.ARXIV=research/arxiv
TOOLS__MCP__ALIASES__FINANCE.SNAPSHOT=finance/yfinance
