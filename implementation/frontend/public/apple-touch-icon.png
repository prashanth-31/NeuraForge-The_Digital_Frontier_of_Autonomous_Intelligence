    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur in="SourceAlpha" stdDeviation="8" />
      <feOffset dx="0" dy="4" result="offsetblur" />
      <feComponentTransfer>
        <feFuncA type="linear" slope="0.3" />
      </feComponentTransfer>
      <feMerge>
        <feMergeNode />
        <feMergeNode in="SourceGraphic" />
      </feMerge>
    </filter>
  </defs>
  <rect width="180" height="180" rx="45" fill="url(#gradient)" filter="url(#shadow)" />
  <circle cx="90" cy="90" r="65" fill="none" stroke="white" strokeWidth="10" strokeOpacity="0.2" />
  <circle cx="90" cy="90" r="45" fill="none" stroke="white" strokeWidth="8" strokeOpacity="0.4" />
  <circle cx="90" cy="90" r="25" fill="white" opacity="0.9" />
</svg>
